/* pages/cards/addcard.wxss */

.cardbox {
  padding: 10px;
}

.cardbox-item {
  text-align: center;
  margin-bottom: 10px;
}

.cardbox-img {
  width: 80px;
  height: 80px;
}

.t-item {
  height: 35px;
  line-height: 35px;
  border-bottom: 1rpx solid #d9d9d9;
  margin-top: 15px;
  color: #444;
}

.t-item-left {
  float: left;
  width: 30%;
}

.t-item-right {
  float: right;
  width: 70%;
}

.t-item-right input {
  text-align: right;
}

.savecardbox {
  margin-top: 20px;
}


.btnbox {
  clear: both;
  margin-top: 20px;
}

.btnitem1 {
  width: 48%;
  text-align: center;
  float: left;
  margin-right: 4%;
}

.btnitem2 {
  width: 48%;
  text-align: center;
  float: left;
}

.btnsave {
  border-radius: 4px;
  margin: 0 auto;
}

.btnitem1 .btnsave {
  /* border: 1px solid #f6c142; */
  background-color: rgb(197, 197, 197);
  color: #000000;
  height: 40px;
  line-height: 40px;
}

.btnitem1 .btnsave-hover {
  background-color: #dddada;
}

.btnitem2 .btnsave {
  background-color: #f6c142;
  color: #fff;
  height: 40px;
  line-height: 40px;
}

.btnitem2 .btnsave-hover {
  background-color: #f4d95b;
}

.btnitem2 .btnsave::after {
  border: none;
}